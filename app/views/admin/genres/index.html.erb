<div class= "container">
  <h4>ジャンル一覧・追加</h4>
  <% if @genre.errors.any? %>
    <ul class="alert alert-danger" role="alert">
      <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  
  <div>
    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
      <table class= "table">
        <tr>
          <td>ジャンル</td>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit '新規登録', class: 'btn btn-success' %></td>
        </tr>      
      </table>
    <% end %>  
  </div>
  
  <div>
    <table class="table">
      <thead>
        <tr>
          <td>ジャンル</td>
          <td></td>
          <td></td>
        </tr>  
      </thead>
      <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
          <td><%= link_to "削除する", admin_genre_path(genre.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %></td>
        </tr>
      </tbody>
    <% end %>  
    </table>
  </div>
</div>