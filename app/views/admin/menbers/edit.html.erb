<div class="container">
  <h6><%= "#{@menber.name}さんの会員情報編集" %></h6>
  <%= form_with model: @menber, url: admin_menber_path(@menber), method: :patch do |f| %>
    <table class="table">
      <tr class="form-group">
        <td>名前</td>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr class="form-group">
        <td>ニックネーム</td>
        <td><%= f.text_field :nickname %></td>
      </tr>
      <tr class="form-group">
        <td>自己紹介</td>
        <td><%= f.text_area :introduction %></td>
      </tr>
      <tr>
        <td>ステータス</td>
        <td>
          <%= f.radio_button :status, :false %>
          <%= f.label :status, "有効", {value: :false, style: "display: inline-block;"} %>
          <%= f.radio_button :status, :true %>
          <%= f.label :status, "退会",{value: :true, style: "display: inline-block;"} %>
        </td>
      </tr>
    </table>
    <%= f.submit"編集内容を保存する", class: "btn btn-success" %>
  <% end %>    
</div>
