<div class= "container">
  <h5>車紹介</h5>
  <div class="row">
    <%= image_tag @car.get_car_image(800,800), class: "col-lg-6" %>
    <div class="col">
      <strong>車名</strong>
      <p><%= @car.name %></p>
      <strong>ジャンル</strong>
      <p><%= @car.genres.pluck(:name).join(',') %></p>
      <strong>紹介/こだわりポイント</strong>
      <p><%= @car.introduction %></p>
    </div>
  </div>
    <%= link_to "編集する", edit_admin_car_path, class: "btn btn-primary" %>
    <%= link_to "削除する", admin_car_path(@car.id), method: :delete, "data-confirm" => "強制削除しますか？", class: "btn btn-danger" %>
</div>