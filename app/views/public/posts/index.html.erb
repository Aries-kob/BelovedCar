<div class="card-list-container">
  <% @posts.each do |post| %>
    <%= link_to public_post_path(post.id) %>
      <%= post_image_tag.get_image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag post.menber.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
          <%= post.menber.name %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(public_post_path(post.id), class:"text-dark")  do %>
              <strong><%= post.title %></strong>
            <% end %>  
          </p>
          <p class="card-text"><%= post.introduction %></p>
        </div>
      </div>    
    </div>
</div>    