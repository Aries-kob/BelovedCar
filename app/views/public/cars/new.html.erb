<div class="container">
  <div class="row">
    <div>
      <h4>愛車登録</h4>
       <% if @car.errors.any? %>
        <ul class="alert alert-danger" role="alert">
          <% @car.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @car, url: public_cars_path, method: :post do |f| %>
        <div class="form-group">
          <h6>画像</h6>
          <%= f.file_field :car_image, accept: "image/*" %>
        </div>
        <div class= "form-group">
          <h6>車名</h6>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <h6>説明</h6>
          <%= f.text_area :introduction %>
        </div>
        <div class="form-group">
          <h6>ジャンル</h6>    
          <%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :name) do |genre| %>
            <%= genre.label do %>
              <%= genre.check_box %>
              <%= genre.text %>
            <% end %>
          <% end %>  
        </div>
        <div>
          <%= f.submit '登録する', class: 'btn btn-success' %>    
        </div>
      <% end %>  
    </div>  
  </div>
</div>
