<div class= "container">
  <h5>愛車紹介</h5>
  <div class="row">
    <%= image_tag @car.get_car_image(800,800), class: "col-lg-6" %>
    <div class="col">
      <strong>車名</strong>
      <p><%= @car.name %></p>
      <strong>ジャンル</strong>
      <p><%= @car.genres.pluck(:name).join(',') %></p>
      <strong>紹介/こだわりポイント</strong>
      <p><%= @car.introduction %></p>
    </div>
  </div>
  <% if menber_signed_in? && @menber == current_menber %>
    <%= link_to "編集する", edit_public_car_path, class: "btn btn-primary" %>
    <%= link_to "削除する", public_car_path(@car.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %>
  <% end %>  
</div>
