<div class="container">
  <h2>ログイン</h2>
    <%= form_with model: @menber, url: menber_session_path do |f| %>
      <div class="field row ml-auto">
        <%= f.label :email, class: "col-form-label col-lg-2" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-3 form-control-sm" %>
      </div>
      <div class="field row ml-auto">
        <%= f.label :password, "パスワード", class: "col-form-label col-lg-2" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "col-lg-3 form-control-sm" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-success" %>
      </div>
    <% end %>

  <%= render "public/shared/links" %>
</div>