<div class="container">
  <h6>掲示板作成</h6>
  <div class="row">
    <%= form_with model: @board, url:   public_boards_path, method: :post do |f| %>
     <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
     </div>
     <div class="form-group">
       <%= f.label :body %>
       <%= f.text_area :body, class: "form-control" %>
     </div>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>  
  </div>    
</div>